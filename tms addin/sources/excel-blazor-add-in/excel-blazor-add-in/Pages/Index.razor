@page "/"

<PageTitle>Hello World</PageTitle>

<div class="row">
	<h1>
		Call Office JavaScript API
	</h1>
	<p>
		Set cell A1 to the value of 'Hello world!' using JavaScript interop between Blazor and the Office JavaScript API.
	</p>
	<div class="col-md-6">
		<button type="button" class="btn btn-primary" @onclick="HelloButton">Hello world!</button>
	</div>

	<p role="status">Current count: @currentUser</p>
	<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</div>

@code {
	private string currentUser = "";



	private async Task IncrementCount()
	{
		currentUser = await JSModule.InvokeAsync<string>("userButton");
	}
}