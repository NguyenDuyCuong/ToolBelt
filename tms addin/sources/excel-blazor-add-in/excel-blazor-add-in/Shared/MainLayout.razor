@inherits LayoutComponentBase

<NavMenu />

<main class="container">
	@Body
</main>

<footer class="d-flex align-items-center justify-content-center">
	<div class="row">
		@TrademarkMessage1
	</div>
	<div class="row">
		@TrademarkMessage2
	</div>
	<div class="row">
		Powered by: @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription
	</div>
</footer>


@code {
	public string TrademarkMessage1 { get; set; } = "Copyright © " + @DateTime.Now.Year + " Maarten van Stam.";
	public string TrademarkMessage2 { get; set; } = "All rights reserved.";
}
