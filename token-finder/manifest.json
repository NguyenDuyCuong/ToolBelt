{
    "manifest_version": 3,
    "name": "Add Button to Active Tab",
    "version": "1.0",
    "description": "Thêm một nút vào tab đang hoạt động.",
    "permissions": [
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Click để thêm nút"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }